<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FF03DAC5">

        <ImageView
            android:id="@+id/img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/user1"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/img"
            android:text="Joko Subarjo"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:padding="15dp"
        android:layout_below="@id/relay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Email"
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:id="@+id/email1"
                android:text="jokosubarjo@gmail.com"
                android:textSize="18sp"
                android:layout_below="@id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lr"
                android:layout_marginTop="2dp"
                android:layout_below="@id/email1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@id/lr"
                android:text="Username"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/username1"
                android:text="JokoSubarjo"
                android:textSize="18sp"
                android:layout_below="@id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lr1"
                android:layout_marginTop="2dp"
                android:layout_below="@id/username1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/lr1"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Password"
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/password1"
                android:text="Ubah Password"
                android:textSize="18sp"
                android:layout_below="@id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lr2"
                android:layout_marginTop="2dp"
                android:layout_below="@id/password1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/lr2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Nomor Telepon"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/phone1"
                android:text="+62-8577-2033-9819"
                android:textSize="18sp"
                android:layout_below="@id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lr3"
                android:layout_marginTop="2dp"
                android:layout_below="@id/phone1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>